<Window x:Class="ConnectionTest.WinFoler.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectionTest.WinFoler"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Auth" Height="450" Width="450">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Margin="3,10,0,88" Content="Авторизация" FontSize="20" Grid.Column="1"/>
        <TextBox x:Name="LoginTB" Style="{DynamicResource TextBoxStyleRounded}" Margin="0,108,0,5" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="91,116,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordPB" Margin="0,10,0,103" Grid.Column="1" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="91,18,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Grid.Row="1"/>
        <Button x:Name="LoginBtn" Grid.Column="1" Content="Войти" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="32" Width="58" Click="LoginBtn_Click"/>
        <Button x:Name="RegBtn" Grid.Column="1" Content="Зарегестрироваться" HorizontalAlignment="Center" Margin="0,85,0,0" Grid.Row="2" VerticalAlignment="Top" Height="22" Width="128" Background="#FF309DF1" Click="RegBtn_Click"/>


    </Grid>
</Window>
